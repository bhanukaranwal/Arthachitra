# Arthachitra Production Environment Configuration
# WARNING: This file contains sensitive information. Keep secure!

# Application Settings
APP_NAME=arthachitra
APP_VERSION=1.0.0
APP_ENVIRONMENT=production
DEBUG=false
SECRET_KEY=CHANGE_ME_IN_PRODUCTION_SUPER_SECRET_KEY

# Database Configuration
DATABASE_URL=postgresql://arthachitra_user:CHANGE_ME_STRONG_PASSWORD@postgres:5432/arthachitra_prod
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Configuration
REDIS_URL=redis://:CHANGE_ME_REDIS_PASSWORD@redis:6379
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD

# JWT Configuration
JWT_SECRET_KEY=CHANGE_ME_JWT_SECRET_KEY_PRODUCTION
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# CORS Configuration
CORS_ORIGINS=["https://arthachitra.com","https://app.arthachitra.com"]

# API Configuration
API_V1_STR=/api/v1
RATE_LIMIT_DEFAULT=1000/minute
RATE_LIMIT_AUTHENTICATED=5000/minute
RATE_LIMIT_PREMIUM=10000/minute

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/arthachitra.crt
SSL_KEY_PATH=/etc/ssl/private/arthachitra.key

# Email Configuration (for notifications)
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=noreply@arthachitra.com
SMTP_PASSWORD=CHANGE_ME_EMAIL_PASSWORD
FROM_EMAIL=noreply@arthachitra.com

# External Services
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Broker API Keys (Encrypt these in production!)
ZERODHA_API_KEY=CHANGE_ME_ZERODHA_API_KEY
ZERODHA_API_SECRET=CHANGE_ME_ZERODHA_API_SECRET
FYERS_APP_ID=CHANGE_ME_FYERS_APP_ID
FYERS_SECRET_KEY=CHANGE_ME_FYERS_SECRET_KEY
ANGEL_ONE_API_KEY=CHANGE_ME_ANGEL_ONE_API_KEY
ANGEL_ONE_SECRET=CHANGE_ME_ANGEL_ONE_SECRET

# Global Broker APIs
BINANCE_API_KEY=CHANGE_ME_BINANCE_API_KEY
BINANCE_API_SECRET=CHANGE_ME_BINANCE_API_SECRET
IBKR_USERNAME=CHANGE_ME_IBKR_USERNAME
IBKR_PASSWORD=CHANGE_ME_IBKR_PASSWORD
ALPACA_API_KEY=CHANGE_ME_ALPACA_API_KEY
ALPACA_SECRET_KEY=CHANGE_ME_ALPACA_SECRET_KEY

# Data Providers
NSE_TOKEN=CHANGE_ME_NSE_TOKEN
BSE_TOKEN=CHANGE_ME_BSE_TOKEN
YAHOO_FINANCE_API_KEY=CHANGE_ME_YAHOO_API_KEY
ALPHA_VANTAGE_API_KEY=CHANGE_ME_ALPHA_VANTAGE_KEY

# ML Configuration
ML_SERVICE_URL=http://ml-service:8001
HUGGINGFACE_API_KEY=CHANGE_ME_HUGGINGFACE_KEY
OPENAI_API_KEY=CHANGE_ME_OPENAI_KEY

# AWS Configuration (if using cloud storage)
AWS_ACCESS_KEY_ID=CHANGE_ME_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=CHANGE_ME_AWS_SECRET_KEY
AWS_REGION=ap-south-1
AWS_S3_BUCKET=arthachitra-production-data

# Trading Configuration
TRADING_ENABLED=true
PAPER_TRADING_ENABLED=true
MAX_ORDER_VALUE=10000000.00
MAX_POSITION_SIZE=50000000.00
RISK_CHECKS_ENABLED=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/arthachitra/app.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=10

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_S3_BUCKET=arthachitra-backups
BACKUP_RETENTION_DAYS=30

# Monitoring & Alerting
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
ALERT_EMAIL=admin@arthachitra.com
HEALTH_CHECK_URL=https://api.arthachitra.com/health

# Performance Configuration
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=65
CLIENT_MAX_BODY_SIZE=10M

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_SOCIAL_FEATURES=true
ENABLE_PAPER_TRADING=true
ENABLE_LIVE_TRADING=true
ENABLE_OPTIONS_TRADING=true
ENABLE_CRYPTO_TRADING=false

# Cache Configuration
CACHE_TTL_QUOTES=1
CACHE_TTL_HISTORICAL=300
CACHE_TTL_ORDERBOOK=0
CACHE_TTL_POSITIONS=60

# WebSocket Configuration
WS_MAX_CONNECTIONS=10000
WS_PING_INTERVAL=25
WS_PING_TIMEOUT=60
WS_COMPRESSION=true

# Security Headers
SECURITY_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000
CSP_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'"
