# Arthachitra Environment Configuration Template
# Copy this to .env and update with your values

# Application Settings
APP_NAME=arthachitra
APP_ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/arthachitra
DATABASE_TEST_URL=postgresql://postgres:password@localhost:5432/arthachitra_test

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# API Keys - Brokers
ZERODHA_API_KEY=your_zerodha_api_key
ZERODHA_API_SECRET=your_zerodha_api_secret
FYERS_APP_ID=your_fyers_app_id
FYERS_SECRET_KEY=your_fyers_secret_key
ANGEL_ONE_API_KEY=your_angel_one_api_key
ANGEL_ONE_SECRET=your_angel_one_secret

# Global Brokers
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret
IBKR_USERNAME=your_ibkr_username
IBKR_PASSWORD=your_ibkr_password
ALPACA_API_KEY=your_alpaca_api_key
ALPACA_SECRET_KEY=your_alpaca_secret_key

# Data Providers
NSE_TOKEN=your_nse_token
BSE_TOKEN=your_bse_token
YAHOO_FINANCE_API_KEY=your_yahoo_finance_key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key

# External Services
SENTRY_DSN=your_sentry_dsn
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# ML Configuration
ML_MODEL_PATH=/app/models
HUGGINGFACE_API_KEY=your_huggingface_key
OPENAI_API_KEY=your_openai_key

# AWS Configuration (if using cloud)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-south-1
AWS_S3_BUCKET=arthachitra-data

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Rate Limiting
RATE_LIMIT_DEFAULT=1000/minute
RATE_LIMIT_AUTHENTICATED=5000/minute
RATE_LIMIT_PREMIUM=10000/minute
